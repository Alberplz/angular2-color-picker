{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es2015", "dom"],
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "outDir": "./dist",
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
          "./node_modules/@types"
        ],
        "types": [
          "node"
        ]
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
     "angularCompilerOptions": {
        "genDir": "."
    }
}
