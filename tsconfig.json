{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "inlineSources": true,
        "lib": ["dom", "es2015"],
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "./lib",
        "sourceMap": true,
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "files": [
        "lib/index.ts",
        "lib/classes.ts",
        "lib/color-picker.module.ts",
        "lib/color-picker.service.ts",
        "lib/color-picker.directive.ts"
    ],
    "angularCompilerOptions": {
        "skipMetadataEmit" : false,
        "skipTemplateCodegen": true
    }
}
